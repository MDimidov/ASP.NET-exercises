@using ChatApp.Models.Chat
@model IEnumerable<MessageViewModel>

<h2>@ViewBag.Title</h2>

@foreach (var message in Model)
{
    <div class="card .bg-light col-6">
        <div class="card-body">
            <blockquote class="blockquote mb-0">

            <p>@message.Message</p>
            <footer class="blockquote-footer">@message.Author</footer>
            </blockquote>
        </div>
    </div>
}

<section>
    <h3>Send a new message</h3>
    <form class="d-xl-flex" asp-controller="Chat" asp-action="Send" method="post">
        <div>
            <label name="message">Message:</label>
            <input name="message" id="message" />
        </div>

        <div>
            <label name="author">Sender Name:</label>
            <input name="author" id="author" />
            <button class="btn btn-primary" type="submit">Send</button>
        </div>
    </form>
</section>